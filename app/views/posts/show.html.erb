<!-- show -->
<div class="container" style="margin-top: 1.5rem;">
  <div class="section">
    <div class="row">
      <div class="col l12">
        <div class="row">
          <div class="col s12 l8">
            <%= image_tag @post.image.to_s, :width => "800", :height => "600", :class => "responsive-img z-depth-3" %>
          </div>
          <div class="col s12 l4">
            <div class="card-panel" style="font-size:1.5rem;">
              <%= link_to(@user.name, "/users/#{@user.id}") %>
              <div class="card-content">
                <p><%= simple_format(@post.content) %></p>
              </div>

              <div class="card-action">
                <%= link_to "戻る", :back %>
                
                <% if @current_user %>
                  <% if @post.user_id == @current_user.id %>
                    <%= link_to("削除", "/posts/#{@post.id}/destroy", { method: "post" })%>
                  <% end %>
                <% end %>

                <% if @current_user %>
                  <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
                    <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
                      <span class="fa fa-heart like-btn-unlike" style="margin-left:4rem;"></span>
                    <% end %>
                  <% else %>
                    <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
                      <span class="far fa-heart like-btn" style="margin-left:4rem;"></span>
                    <% end %>
                  <% end %>
                  <%= @likes_count %>
                <% else %>
                  <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
                    <span class="far fa-heart like-btn" style="margin-left:4rem;"></span>
                  <% end %>
                  <%= @likes_count %>
                <% end %>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>