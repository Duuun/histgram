<!-- posts -->
<div class="container" style="margin-top: 20px;">
  <div class="row">
    <% @post.each do |post| %>
      <div class="col s4 m4 l4">
        <div class="card" style="min-height:250px;">
          <div class="card-content black-text">
            <%= link_to(simple_format(post.content), "posts/#{post.id}") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
.card-image img {
  width: 293px;
  height: 293px;
}
</style>