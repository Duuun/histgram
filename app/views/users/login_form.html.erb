<!-- login -->
<div class="container" style="margin-top:1.5rem;">
  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card-panel" style="padding: 0;">
        <h4>Sign in</h4>

        <% if @error_message %>
          <div class="form__error">
            <%= @error_message %>
          </div>
        <% end %>

        <%= form_tag("/login") do %>
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="email" value="<%= @email %>">
              <label for="email" class>email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input type="password" name="password" value="<%= @password %>">
              <label for="password" class>password</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <button type="submit" class="btn cyan waves-effect waves-light left">
                submit
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
.card-panel {
  border-radius: 20px;
}
.card-panel h4 {
  background: #F44336;
  color: #fff;
  padding: 20px;
  border-radius: 9px;
}
.card-panel form {
  padding: 25px;
}
</style>